import java.util.*;

public class BirthdayReminderInocentes {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        String[] names = new String[10];
        int[] birthMonths = new int[10];
        int count = 0;
        
        System.out.println("Enter 10 names and birth months (1-12). Enter 'done' to finish.");
        
        while(count < 10) {
            System.out.print("Name: ");
            String name = input.nextLine();
            if(name.equalsIgnoreCase("done")) break;
            names[count] = name;
            System.out.print("Birth month (1-12): ");
            int birthMonth = input.nextInt();
            input.nextLine();
            birthMonths[count] = birthMonth;
            count++;
        }
        
        System.out.println("You entered " + count + " names.");
        System.out.println(Arrays.toString(Arrays.copyOf(names, count)));
        
        while(true) {
            System.out.print("Enter a name to look up the birth month (or 'done' to exit): ");
            String name = input.nextLine();
            if(name.equalsIgnoreCase("done")) break;
            int index = -1;
            for(int i = 0; i < count; i++) {
                if(names[i].equalsIgnoreCase(name)) {
                    index = i;
                    break;
                }
            }
            if(index == -1) {
                System.out.println("Name not found.");
            } else {
                System.out.println(names[index] + " was born in month " + birthMonths[index]);
            }
        }
    }
}
